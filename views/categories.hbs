<!-- views/categories.hbs -->
<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />
    {{#if categories}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
          <tr>
            <td><a href="/shop?category={{id}}">{{id}}</a></td>
            <td><a href="/shop?category={{id}}">{{category}}</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/if}}
  </div>
</div>