<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h2>Categories</h2>
            <a href="/categories/add" class="btn btn-success">Add Category</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th></th> <!-- Header for the remove button column -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{id}}">{{id}}</a></td>
                            <td><a href="/items?category={{id}}">{{category}}</a></td>
                            <td>
                                <a href="/categories/delete/{{id}}" 
                                   class="btn btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                   Remove
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            {{#unless categories.length}}
            <strong>{{message}}</strong>
            {{/unless}}
        </div>
    </div>
</div>