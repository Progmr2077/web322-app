<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th>Actions</th> <!-- New column for actions -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>{{price}}</td>
                        <td><a href="/items?category={{categoryId}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td>
                            <!-- Delete button -->
                            <a href="/items/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 text-center">
        {{#unless items.length}}
        <strong>{{message}}</strong>
        {{/unless}}
    </div>
</div>