<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h2>Items</h2>
            <a href="/items/add" class="btn btn-success">Add Post</a>
        </div>
    </div>

    <hr />

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Published</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{postDate}}</td>
                    <td>${{price}}</td> <!-- Format price as currency -->
                    <td>
                        <a href="/items?category={{category}}" class="text-decoration-none">{{categoryName}}</a>
                    </td>
                    <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                    <td>
                        <a href="/items/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 text-center">
            {{#unless items.length}}
            <p class="text-muted"><strong>{{message}}</strong></p> <!-- Added paragraph tag for message styling and muted text color -->
            {{/unless}}
        </div>
    </div>
</div>