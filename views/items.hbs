<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <a href="/items/add" class="btn btn-success mb-3">Add Post</a> <!-- Adjusted button spacing -->
        <hr />
        <div class="table-responsive">
            <table class="table table-striped"> <!-- Added table-striped for better readability -->
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>${{price}}</td> <!-- Format price as currency -->
                        <td>
                            <!-- Link to filtered items by category -->
                            <a href="/items?category={{category}}">{{categoryName}}</a>
                        </td>
                        <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <!-- Delete button with confirmation -->
                            <a href="/items/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 text-center">
        {{#unless items.length}}
        <p><strong>{{message}}</strong></p> <!-- Added paragraph tag for message styling -->
        {{/unless}}
    </div>
</div>