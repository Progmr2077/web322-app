<!-- views/shop.hbs -->
<div class="row">
  <div class="col-md-12">
    <h2>Shop</h2>
    <hr />
    <div class="row">
      <div class="col-md-3">
        <h3>Categories</h3>
        <ul class="list-group">
          {{#each data.categories}}
          <li class="list-group-item">
            <a href="/shop?category={{id}}">{{category}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col-md-9">
        {{#if data.items}}
        <div class="row">
          {{#each data.items}}
          <div class="col-md-4">
            <div class="card">
              <img class="card-img-top" src="{{featureImage}}" alt="{{title}}">
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{body}}</p>
                <a href="/item/{{id}}" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="col-md-12 text-center">
          <strong>{{data.itemsMessage}}</strong>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>